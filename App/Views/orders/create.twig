{% extends "layout.twig" %}

{% block title %}Create New Order{% endblock %}

{% block content %}
    <div class="card" style="max-width: 600px; margin: 0 auto;">
        <h2 style="margin-bottom: 1.5rem;">Create New Order</h2>

        <form action="/orders/create" method="POST">
            <div class="form-group">
                <label for="user_id">Customer ID</label>
                <input type="number" class="form-control" id="user_id" name="user_id" required>
            </div>

            <div class="form-group">
                <label for="products">Products (comma-separated)</label>
                <input type="text" class="form-control" id="products" name="products"
                       placeholder="e.g., apple, banana" required>
            </div>

            <div class="form-group">
                <label for="total">Total Amount</label>
                <input type="number" class="form-control" id="total" name="total"
                       step="0.01" required>
            </div>

            <div style="display: flex; gap: 1rem;">
                <button type="submit" class="btn btn-primary">Create Order</button>
                <a href="/order" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
{% endblock %}